<Window x:Class="Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBox Name="OutputTextBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="5" BorderThickness="1" TextAlignment="Right" IsReadOnly="True"/>
        <Button Grid.Row="1" Grid.Column="0" Content="%" Margin="5" Click="Percent"/>
        <Button Grid.Row="1" Grid.Column="1" Content="CE" Margin="5" Click="DeleteButtonClick"/>
        <Button Grid.Row="1" Grid.Column="2" Content="C" Margin="5" Click="DeleteButtonClick"/>
        <Button Grid.Row="1" Grid.Column="3" Content="Delete" Margin="5" Click="DeleteButtonClick"/>
        
        <Button Grid.Row="2" Grid.Column="0"  Content="1/x" Margin="5" Click="OneSlashX"/>
        <Button Grid.Row="2" Grid.Column="1" Content="x²" Margin="5" Click="SqrtButtonClick"/> 
        <Button Grid.Row="2" Grid.Column="2" Content="√x" Margin="5" Click="SqrRootButtonClick"/>
        <Button Grid.Row="2" Grid.Column="3" Content="/" Margin="5" Click="OperatorButtonClick"/>
        
        <Button Grid.Row="3" Grid.Column="0" Content="7" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="3" Grid.Column="1" Content="8" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="3" Grid.Column="2" Content="9" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="3" Grid.Column="3" Content="*" Margin="5" Click="OperatorButtonClick"/>
        
        <Button Grid.Row="4" Grid.Column="0" Content="4" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="4" Grid.Column="1" Content="5" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="4" Grid.Column="2" Content="6" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="4" Grid.Column="3" Content="-" Margin="5" Click="OperatorButtonClick"/>
        
        <Button Grid.Row="5" Grid.Column="0" Content="1" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="5" Grid.Column="1" Content="2" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="5" Grid.Column="2" Content="3" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="5" Grid.Column="3" Content="+" Margin="5" Click="OperatorButtonClick"/>
        
        <Button Grid.Row="6" Grid.Column="0" Content="+/-" Margin="5" Click="Negate"/>
        <Button Grid.Row="6" Grid.Column="1" Content="0" Margin="5" Click="NumberButtonClick"/>
        <Button Grid.Row="6" Grid.Column="2" Content="," Margin="5" Click="Carka"/>
        <Button Grid.Row="6" Grid.Column="3" Content="=" Margin="5" Click="IsEqualButtonClick"/>
    </Grid>
</Window>
